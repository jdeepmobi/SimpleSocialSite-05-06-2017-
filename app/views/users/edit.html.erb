<% provide(:title, "Edit user") %>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>



<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
     

      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %><br><br>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %><br><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br><br>

      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br><br>

      <%= f.submit "Save changes", class: "btn btn-primary" %><br>
    <% end %>

    
  </div>
</div>
